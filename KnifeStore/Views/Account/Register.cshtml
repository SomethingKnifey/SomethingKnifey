@model KnifeStore.Models.ViewModels.RegisterViewModel

@{
    Layout = "_Layout";
}

<h2>Register for an Account</h2>

<form asp-action="Register" method="post">

    <div>
        <label asp-for="FirstName">First Name:</label>
        <input asp-for="FirstName" type="text" placeholder="First Name" required />
    </div>

    <div>
        <label asp-for="LastName">Last Name:</label>
        <input asp-for="LastName" type="text" placeholder="Last Name" required />
    </div>

    <div>
        <label asp-for="Email">Email:</label>
        <input asp-for="Email" type="email" placeholder="Email" required />
    </div>

    <div>
        <label asp-for="Password">Password:</label>
        <input asp-for="Password" type="password" required />
    </div>

    <div>
        <label asp-for="ConfirmPassword">Re-enter your password:</label>
        <input asp-for="ConfirmPassword" type="password" required />
    </div>

    <div>
        <label asp-for="IsMilitaryOrLE">Are you currently in law enforcement or the military?</label>
        <input asp-for="IsMilitaryOrLE" type="checkbox" />
    </div>

    <div>
        <button type="submit">Complete Registration</button>
    </div>

</form>