@using KnifeStore.Models
@using Microsoft.AspNetCore.Identity

@inject UserManager<ApplicationUser> UserManager
@inject SignInManager<ApplicationUser> SignInManager

@{
    Layout = "_Layout";
}



<body>

    <div style="position: relative">
        <div class="container align-middle" style="text-align: center; top: 50%">
            <h2 style="font-family: 'Pacifico', cursive; padding-bottom: 20px">For all your cutlery needs</h2>
            <img class="mx-auto d-block" src="~/Assets/knives.jpeg" /><br />
            <a style="font-family: 'Pacifico', cursive" asp-action="ViewAllProducts" asp-controller="UserShop">Browse</a><br />

            @if (User.Identity.Name != null)
            {
                <a style ="font-family: 'Pacifico', cursive" asp-action="MyCart" asp-controller="Cart">View your Cart</a><br />
            }


            @if (User.Identity.Name == null)
            {
            <h3 style="font-family: 'Pacifico', cursive">Don't have an account yet? Register <a href="~/account/register">here</a>.</h3>
            }

        </div>
    </div>

</body>

